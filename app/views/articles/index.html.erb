


<div class="row">
  <div class="col-sm-4">
    <h1>Articles</h1>
  </div>

  <div class="col-sm-4 text-right">
    <%= form_tag(articles_path, method: "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Articles" %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>

  <div class="col-sm-4 text-right">
  <%= link_to new_article_path, class: 'btn btn-primary' do %>
    Add New Article
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Body</th>
            <th>User</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <%= content_tag :tr, id: dom_id(article), class: dom_class(article) do %>
          

                      <td><%= article.title %></td>
                      <td><%= article.body %></td>
                      <td><%= article.user.first_name %> <%= article.user.last_name %></td>
          
          
            <td><%= link_to 'Show', article %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%== pagy_bootstrap_nav(@pagy) %>
</div>
