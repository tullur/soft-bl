<div class="media">
  <div class="media-body">
    <% if comment.user.avatar.attached? %>
      <%= image_tag comment.user.avatar.variant(resize: '100x100'), class: "rounded-circle" %>
    <% end %>

    <%# <p class="lead">
      <strong>Username:</strong>
      <%= comment.user.username %>


    <p class="lead">
      <%= comment.body %>
    </p>
    <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>

    <%= form_for [comment, Comment.new], html: { class: "form-group" } do |f| %>
        <%= hidden_field_tag "article_id", @article.id %>
        <%= f.text_area :body, placeholder: "Add a Reply", class: "form-control" %><br/>
        <%= f.submit "Reply", class: "form-control" %>
        <%= link_to 'Destroy Comment',
          [comment.commentable, comment, article_id: @article.id],
          data: { method: :delete, remote: true }, class: "form-control",
          data: { confirm: 'Are you sure?' } %>
    <% end %>

    <ul class="nested_messages">
      <%= render comment.comments %>
    </ul>

  </div>
</div>
